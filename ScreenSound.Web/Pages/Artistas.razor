@page "/Artistas"
@inject ArtistaService artistaService

<PageTitle>Artistas</PageTitle>

@* <h3>Artistas</h3> *@
<MudText Typo="Typo.h3">Artistas</MudText>

@if (artistas.Any())
{
    <MudGrid>
        @foreach (var artista in artistas)
        {
            <MudItem xs="3">
                <CardArtista Artista="@artista" />
            </MudItem>
        }
    </MudGrid>
}

@code {
    public ICollection<ArtistaResponse>? artistas;

    protected override async Task OnInitializedAsync()
    {
        artistas = await artistaService.GetArtistas();
    }
}
